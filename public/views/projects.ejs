<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects - Climate Solutions</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 font-sans">

    <!-- Navbar -->
    <%- include('partials/navbar', { page: 'projects' }) %>

    <div class="container mx-auto p-6">
        <!-- Page Title -->
        <h1 class="text-4xl font-bold text-center text-gray-800 mb-6">Climate Solutions Projects</h1>

        <!-- Filtered Sector -->
        <div class="mb-6">
            <p class="text-xl font-semibold">Filter by Sector:</p>
            <div class="flex space-x-4 mt-4">
                <% sectorData.forEach(sectorItem => { %>
                    <a href="/solutions/projects?sector=<%= sectorItem.sector_name %>" class="p-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition duration-300 <%= sector === sectorItem.sector_name ? 'bg-blue-700' : '' %>">
                        <%= sectorItem.sector_name %>
                    </a>
                <% }); %>
            </div>
        </div>
        
        <!-- Projects List -->
        <ul class="space-y-6">
            <% projects.forEach(project => { %>
                <li class="bg-white p-6 rounded-lg shadow-md hover:bg-gray-100 transition duration-300">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                        <!-- Title Column -->
                        <div class="col-span-1">
                            <a href="/solutions/projects/<%= project.id %>" class="text-xl font-semibold text-blue-500 hover:underline">
                                <%= project.title %>
                            </a>
                        </div>
        
                        <!-- Summary Column -->
                        <div class="col-span-1">
                            <p class="text-gray-600 mt-2 mb-4"><%= project.summary_short %></p>
                        </div>
        
                        <!-- Sector Column -->
                        <div class="col-span-1">
                            <span class="text-gray-600"> - <%= project.sector %></span>
                        </div>
        
                        <!-- Details Button Column -->
                        <div class="col-span-1 mt-4 flex items-center justify-center">
                            <a href="/solutions/projects/<%= project.id %>" class="inline-block bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600 transition duration-300">View Details</a>
                        </div>
                    </div>
                </li>
            <% }); %>
        </ul>
        
    </div>

</body>
</html>
